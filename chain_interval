package main

import (
    "hash/fnv"
)


func (cb *ChainBlock) LowAtDimension(n uint64) int64 {
    return cb.source.start
}

func (cb *ChainBlock) HighAtDimension(n uint64) int64 {
    return cb.source.end
}

func (cb *ChainBlock) OverlapsAtDimension(i Interval, n uint64) bool {
    if (cb.source.start <= i.LowAtDimension(n) <= cb.source.end) {
        return true
    } else if (cb.source.start <= i.HighAtDimension(n) <= cb.source.end) {
        return true
    } else {
        return false
    }
}

func (cb *ChainBlock) ID() int64 {
    h := fnv.New64a()
    h.Write([]byte(cb.String()))
    return int64(h.Sum64())
}
